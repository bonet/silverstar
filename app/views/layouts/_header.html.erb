<header>
	<%= link_to logo, root_path %>
	<nav class="round">
		<ul>
			<li><%= link_to 'Home', about_path %></li>
			<li><%= link_to 'Help', help_path %></li>
			<% if signed_in? %>
			  <li><%= link_to 'Profile', user_path(session[:valid_user]) %></li>
			<% end %>
			<% if signed_in? %>
			  <li><%= link_to 'Sign out', signout_path, :method => :delete %></li>
			<% else %>
			  <li><%= link_to 'Sign In', signin_path %></li>
			<% end %>
		</ul>
	</nav>
</header>