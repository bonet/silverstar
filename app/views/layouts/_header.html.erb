<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="brand" href="/">Project Silverstar</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="<%= params[:controller] == 'pages' && params[:action] == 'home' ? 'active' : '' %>"><%= link_to 'Home', root_path %></li>
          <li class="<%= params[:controller] == 'pages' && params[:action] == 'about' ? 'active' : '' %>"><%= link_to 'About', about_path %></li>
          <li class="<%= params[:controller] == 'pages' && params[:action] == 'contact' ? 'active' : '' %>"><%= link_to 'Contact', contact_path %></li>
          <% unless signed_in? %>
            <li class="<%= params[:controller] == 'users' && params[:action] == 'new' ? 'active' : '' %>"><%= link_to 'Sign-Up', signup_path %></li>
          <% end %>
        </ul>
        
        
        
        <% if signed_in? %>
          <ul class="nav" style="float:right">
			<li class="<%= params[:controller] == 'users' && params[:action] == 'show' ? 'active' : '' %>"><%= link_to 'Profile', user_path(session[:user_id]) %></li>
			<li><%= link_to 'Sign out', signout_path, :method => :delete %></li>
		  </ul>
		<% else %>
		  <%= form_for( :session, :url => sessions_path, :html => {:class => "navbar-form pull-right"} ) do |f| %>
            <%= f.text_field :email, :class => "span2", :placeholder => "Email"  %>
            <%= f.password_field :password, :class => "span2", :placeholder => "Password"  %>
            <%= f.submit "Sign In", :class => "btn" %>
          <% end %>
		<% end %>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>